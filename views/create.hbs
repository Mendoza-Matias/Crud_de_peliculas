<h1>Formulario de creacion</h1>

<form action="/create/add" method="POST" enctype="multipart/form-data">

    <div class="mb-3 ">
        <label for="exampleInputEmail1" class="form-label">Nombre de la pelicula</label>
        <input name='nombre' type="text" class="form-control" id="nombre" placeholder="Duro de matar">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Genero de pelicula</label>
        <input name='genero' type="text" class="form-control" id="genero" placeholder="Acción">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Año</label>
        <input name='fecha' type="number" class="form-control" id="fecha" placeholder="2022">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Imagen</label>
        <input name='img' type="file" class="form-control" id="img" placeholder="Inserta una imagen">
    </div>
    <button type=" submit" class="btn btn-primary">Enviar</button>

</form>